<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="entity.CategoryEntity" table="category" schema="biddingschema">
        <id name="id">
            <column name="id" sql-type="int"/>
        </id>
        <property name="value">
            <column name="value" sql-type="varchar(45)" length="45"/>
        </property>
        <property name="description">
            <column name="description" sql-type="varchar(150)" length="150" not-null="true"/>
        </property>
        <set name="productHasCategoriesById" inverse="true">
            <key>
                <column name="category_id"/>
            </key>
            <one-to-many not-found="ignore" class="entity.ProductHasCategoryEntity"/>
        </set>
    </class>
</hibernate-mapping>